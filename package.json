{
	"name": "electron-easy-builder",
	"version": "1.0.5",
	"description": "A simple and efficient Electron packaging tool for Windows and macOS. Combined with electron-easy-updater, it makes updating Electron apps easy. The updater automatically determines whether to apply a minimal resource update or a full update.",
	"author": "Auga.L",
	"license": "MIT",
	"scripts": {
		"watch": "webpack --watch --progress --config webpack.dev.ts",
		"build": "webpack --progress --config webpack.prod.ts",
		"link": "sudo npm link"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/featherJ/electron-easy-builder"
	},
	"homepage": "https://github.com/featherJ/electron-easy-builder#readme",
	"keywords": [
		"electron",
		"builder",
		"packager",
		"updater",
		"cli"
	],
	"bin": {
		"easy-builder": "bin/easy-builder.js"
	},
	"files": ["bin", "lib", "README.md","README_CN.md", "package.json"],
	"dependencies": {
		"chardet": "^2.0.0",
		"electron-builder": "24.6.3",
		"png-to-ico": "^2.1.8"
	},
	"optionalDependencies": {
		"dmg-license": "~1.0.11"
	},
	"devDependencies": {
		"@electron/notarize": "^2.5.0",
		"@types/archiver": "~6.0.2",
		"@types/node": "^22.7.4",
		"@types/readdir-glob": "^1.1.5",
		"ajv": "~8.17.1",
		"ajv-errors": "~3.0.0",
		"ajv-formats": "~3.0.1",
		"archiver": "~7.0.1",
		"chalk": "~5.3.0",
		"commander": "~12.1.0",
		"fs-extra": "~11.2.0",
		"iconv-lite": "^0.6.3",
		"raw-loader": "^4.0.2",
		"ts-loader": "~9.5.1",
		"ts-node": "~10.9.2",
		"typescript": "~5.6.2",
		"webpack": "~5.94.0",
		"webpack-cli": "~5.1.4",
		"yaml": "~2.5.1"
	},
	"type": "commonjs"
}

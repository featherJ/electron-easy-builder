{
	"name": "electron-easy-builder",
	"version": "1.0.0",
	"description": "A simpler Electron packaging tool (supports Windows and macOS). With electron-easy-updater, you can easily implement updates for Electron applications. The updater will automatically determine which update method to use: resource minimum update or full update.",
	"author": "Auga.L",
	"license": "MIT",
	"main": "./out/easy-builder.js",
	"scripts": {
		"watch": "webpack --watch --progress --config webpack.dev.ts",
		"build": "webpack --progress --config webpack.prod.ts",
		"link": "sudo npm link"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/featherJ/electron-easy-builder"
	},
	"homepage": "https://github.com/featherJ/electron-easy-builder#readme",
	"keywords": [
		"electron",
		"builder",
		"packager",
		"updater",
		"cli"
	],
	"bin": {
		"easy-builder": "bin/easy-builder.js"
	},
	"dependencies": {
		"chardet": "^2.0.0",
		"electron-builder": "^25.0.5"
	},
	"optionalDependencies": {
		"appdmg": "~0.6.6",
		"dmg-license": "~1.0.11",
		"macos-alias": "github:featherJ/node-alias"
	},
	"devDependencies": {
		"@electron/notarize": "^2.5.0",
		"@types/appdmg": "~0.5.5",
		"@types/archiver": "~6.0.2",
		"@types/node": "^22.7.4",
		"@types/readdir-glob": "^1.1.5",
		"ajv": "~8.17.1",
		"ajv-errors": "~3.0.0",
		"ajv-formats": "~3.0.1",
		"archiver": "~7.0.1",
		"chalk": "~5.3.0",
		"commander": "~12.1.0",
		"fs-extra": "~11.2.0",
		"iconv-lite": "^0.6.3",
		"raw-loader": "^4.0.2",
		"ts-loader": "~9.5.1",
		"ts-node": "~10.9.2",
		"typescript": "~5.6.2",
		"webpack": "~5.94.0",
		"webpack-cli": "~5.1.4",
		"yaml": "~2.5.1"
	},
	"type": "commonjs"
}
